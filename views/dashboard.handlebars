{{!-- Dashboard Page --}}
{{#extend 'layouts/main'}}
  {{#content 'body'}}
    <h1>Dashboard</h1>
    <a href="/create-post">Create Post</a>
    {{#if posts}}
      <ul>
        {{#each posts}}
          <li>
            <h2>{{this.title}}</h2>
            <p>Date: {{this.createdAt}}</p>
            <a href="/posts/{{this.id}}">View</a>
            <form action="/posts/{{this.id}}" method="POST">
              <input type="hidden" name="_method" value="DELETE">
              <button type="submit">Delete</button>
            </form>
            <a href="/posts/{{this.id}}/edit">Edit</a>
          </li>
        {{/each}}
      </ul>
    {{else}}
      <p>No posts found.</p>
    {{/if}}
  {{/content}}
{{/extend}}
